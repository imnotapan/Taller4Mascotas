{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    {{text}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
{{/each}}

<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Registro</h3>
        </div>
        <div class="card-body">
            <form action="/notes" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <h4>Nombre:</h4>
                    <h5>{{note.name_pet}}</h5>
                    <hr style="width:100%;">
                </div>
                <div class="form-group">
                    <h4>Tipo de animal:</h4>
                    <h5>{{note.type_pet}}</h5>
                    <hr style="width:100%;">
                </div>
                <div class="form-group">
                    <h4>Raza:</h4>
                    <h5>{{note.breed_pet}}</h5>
                    <hr style="width:100%;">
                </div>
                <div class="form-group">
                    <h4>Marca distintiva:</h4>
                    <h5>{{note.mark}}</h5>
                    <hr style="width:100%;">
                </div>
                <div class="form-group">
                    <h4>Color:</h4>
                    <h5>{{note.color}}</h5>
                    <hr style="width:100%;">
                </div>
                <div class="form-group">
                    <h4>Fecha de nacimiento:</h4>
                    <h5>{{note.date_born}}</h5>
                    <hr style="width:100%;">
                </div>
                <div class="form-group">
                </div>
            </form>
            <form action="/notes">
                <button type="submit" class="btn btn-danger btn-block btn-sm">Volver a los registros</button>
            </form>
        </div>
    </div>
</div>